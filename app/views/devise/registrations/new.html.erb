<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="actions center">
    <br>
    <%= f.submit "Sign in", class: 'btn btn-primary btn-block sign-in' %>
  </div>
  <% end %>

