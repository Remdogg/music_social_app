<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.first_name %></h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <table>
      <tbody>
        <% @user.followers.each do |follower| %>
        <tr>
          <td><a href="/users/<%=follower.id%>"> <%=follower.first_name%> <%=follower.last_name%> </a></td>
        </tr>
        <% end %>

    </tbody>
  </table>
  </div>
</div>
