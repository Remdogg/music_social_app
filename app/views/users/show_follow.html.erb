<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
      <h1><%= @user.first_name %></h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-10">
    <h2><%= @title %></h2>
    <table>
      <tbody>
        <% @user.followers.each do |follower| %>
        <tr>
          <td><h4><a href="/users/<%=follower.id%>"> <%=follower.first_name%> <%=follower.last_name%> </a></h4></td>
        </tr>
        <% end %>

    </tbody>
  </table>
  </div>
</div>
