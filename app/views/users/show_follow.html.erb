<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.first_name %></h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users = User.find(params[:id])%>
        <% @users.following.ids.each do |id| %>
        <% @name = User.find(id) %>
        <%= @name.email %>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
