<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.first_name %></h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <table>
      <tbody>
          <% @user.following.each do |following| %>
          <tr>
            <td><a href="/users/<%=following.id%>"> <%=following.email%> </a></td>
          </tr>
          <% end %>
    </tbody>
  </table>
  </div>
</div>
