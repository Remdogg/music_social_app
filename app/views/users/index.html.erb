<h1>Users</h1>

<form action="/users" method="get">
 <input type="text" name="search">
 <input type="submit" value="Search">
</form>

<table class = "table">
  <thead>
      <tr>

        <th>Name</th>
        <th>
          Location
        </th>
        <th>

        </th>
      </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><a href='users/<%=user.id%>'><%= user.first_name%> <%= user.last_name%></a> <%= image_tag(user.avatar.url(:thumb)) %>
      </td>
      <td>
        <%=user.city%>, <%=user.state%>
      </td>

    </tr>
  <% end %>
  </tbody>
</table>
